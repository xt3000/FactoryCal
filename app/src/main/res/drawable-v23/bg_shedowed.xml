<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid
                android:color="#11000000">
            </solid>
        </shape>
    </item>

    <item
        android:gravity="start"
        android:height="2dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#441F4C6C"
                android:centerColor="#111F4C6C"
                android:endColor="#0048b3ff"
                android:angle="-90">
            </gradient>
        </shape>
    </item>

    <item
        android:gravity="bottom"
        android:height="2dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#441F4C6C"
                android:centerColor="#111F4C6C"
                android:endColor="#001F4C6C"
                android:angle="90">
            </gradient>
        </shape>
    </item>
</layer-list>