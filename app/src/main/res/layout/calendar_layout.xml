<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:id="@+id/LL_frame"
	android:gravity="top|center_horizontal"
	android:paddingLeft="10dp"
	android:paddingRight="10dp">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="2021г."
		android:textSize="20sp"
		android:id="@+id/tv_year"
		android:gravity="center"/>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="&lt;"
			android:id="@+id/tv_prevMonth"
			android:gravity="center"
			android:textSize="25sp"
			android:paddingRight="20dp"
			android:paddingLeft="20dp"
			android:onClick="onChangeMonthClick"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Февраль"
			android:textSize="25sp"
			android:layout_marginBottom="10dp"
			android:id="@+id/tv_month"
			android:layout_weight="1.0"
			android:gravity="center"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="&gt;"
			android:gravity="center"
			android:textSize="25sp"
			android:paddingLeft="20dp"
			android:paddingRight="20dp"
			android:onClick="onChangeMonthClick"
			android:id="@+id/tv_nextMonth"/>

	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/LL_wdays"
		android:layout_gravity="center"
		android:paddingTop="13dp"
		android:paddingBottom="5dp">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="ПН"
			android:layout_weight="1.0"
			android:gravity="center"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="ВТ"
			android:layout_weight="1.0"
			android:gravity="center"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="СР"
			android:layout_weight="1.0"
			android:gravity="center"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="ЧТ"
			android:layout_weight="1.0"
			android:gravity="center"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="ПТ"
			android:layout_weight="1.0"
			android:gravity="center"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="СБ"
			android:layout_weight="1.0"
			android:gravity="center"
			android:textColor="#FF6670"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="ВС"
			android:layout_weight="1.0"
			android:gravity="center"
			android:textColor="#FF6670"/>

	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="2px"
		android:background="#000000"
		android:alpha="0.5"
		android:layout_marginBottom="2dp"
		android:id="@+id/ll_devider"/>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/LL_w1">

	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/LL_w2"/>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/LL_w3"/>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/LL_w4"/>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/LL_w5"/>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/LL_w6"/>

</LinearLayout>
