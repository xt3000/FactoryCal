<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/main_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#3B3C3D"
	android:fitsSystemWindows="true">

	<android.support.design.widget.AppBarLayout
		android:id="@+id/main.appbar"
		android:layout_width="match_parent"
		android:layout_height="200dp"
		android:fitsSystemWindows="true">

		<android.support.design.widget.CollapsingToolbarLayout
			android:id="@+id/main.collapsing"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:fitsSystemWindows="true"
			app:contentScrim="#993B3C3D"
			app:expandedTitleMarginBottom="32dp"
			app:expandedTitleMarginEnd="64dp"
			app:expandedTitleMarginStart="48dp"
			app:layout_scrollFlags="scroll|exitUntilCollapsed">

			<ImageView
				android:id="@+id/toolbarImage"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:fitsSystemWindows="true"
				android:scaleType="centerCrop"
				android:src="@drawable/factory"
				app:layout_collapseMode="parallax" />

			<android.support.v7.widget.Toolbar
				android:id="@+id/main.toolbar"
				android:layout_width="match_parent"
				android:layout_height="?attr/actionBarSize"
				app:layout_collapseMode="pin"
				app:popupTheme="@style/ThemeOverlay.AppCompat.Dark" />

			<TextView
				android:id="@+id/tv_mainMenu"
				android:layout_width="40dp"
				android:layout_height="26dp"
				android:layout_gravity="top|end"
				android:layout_margin="15dp"
				android:background="@drawable/menu_lines"
				android:clickable="true"
				android:focusableInTouchMode="true"
				android:gravity="center"
				app:layout_collapseMode="pin" />

		</android.support.design.widget.CollapsingToolbarLayout>

	</android.support.design.widget.AppBarLayout>

	<android.support.v4.widget.NestedScrollView
		background="#3B3C3D"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:layout_behavior="@string/appbar_scrolling_view_behavior">

		<include layout="@layout/calendar" />

	</android.support.v4.widget.NestedScrollView>

	<include layout="@layout/bottom_frame" />

	<include layout="@layout/fab_layout" />

	<android.support.design.widget.FloatingActionButton
		android:id="@+id/fab_menu"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/fab_margin"
		android:clickable="true"
		android:cropToPadding="false"
		android:visibility="gone"
		app:backgroundTint="@color/bg_bottomHeader"
		app:fabSize="mini"
		app:layout_anchor="@id/main.toolbar"
		app:layout_anchorGravity="right|center_vertical"
		app:srcCompat="@drawable/menu_dots"
		app:useCompatPadding="false"
		tools:visibility="gone" />

	<android.support.design.widget.FloatingActionButton
		android:id="@+id/afab_add"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_margin="@dimen/fab_margin"
		android:clickable="true"
		android:foregroundGravity="center"
		android:visibility="gone"
		app:backgroundTint="@color/colorAccent"
		app:fabSize="mini"
		app:layout_anchor="@id/cl_header"
		app:layout_anchorGravity="right|end"
		app:srcCompat="@drawable/ic_baseline_add_24"
		tools:visibility="visible" />

</android.support.design.widget.CoordinatorLayout>

