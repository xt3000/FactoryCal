<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="android:textColorHint">@color/rbHint</item>
        <item name="android:colorBackground">@color/colorPrimaryDark_2</item>
<!--        <item name="android:colorForeground">@color/colorPrimaryDark_2</item>-->
        <item name="android:windowBackground">@color/colorPrimaryDark_2</item>
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="colorPrimary">@color/colorPrimary_v2</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_2</item>
        <item name="colorOnSurface">@color/colorPrimaryDark</item>
<!--        <item name="colorPrimaryDark">@color/bg_bottomWindow</item>-->
        <item name="colorControlNormal">@color/rbNormal</item>
        <item name="colorControlActivated">@color/rbActive</item>
    </style>

    <style name="myEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/rbHint</item>
        <item name="colorControlNormal">@color/rbNormal</item>
        <item name="colorControlActivated">@color/rbActive</item>
    </style>

    <style name="AppTheme.Subtitle">
        <item name="android:textSize">9pt</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_bg</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="popup_animations">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button" >
        <item name="android:background">@drawable/blue_outline</item>
        <item name="android:layout_marginVertical">@dimen/btn_vertical_margin</item>
        <item name="android:minHeight">@dimen/btn_min_height</item>
        <item name="android:minWidth">@dimen/btn_min_width</item>
        <item name="android:fontFamily">@font/open_sans</item>"
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="AppTheme.sdle_sft_color_text" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:shadowColor">#777777</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_black_trans_rounded</item>
    </style>

    <style name="AppTheme.SftCardView">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:foreground">@drawable/circle_contur</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="AppTheme.MaterialBtn" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/black_transparent_15</item>
        <item name="android:layout_marginVertical">@dimen/btn_vertical_margin</item>
        <item name="android:minHeight">@dimen/btn_min_height</item>
        <item name="android:minWidth">@dimen/btn_min_width</item>
    </style>

    <style name="AppTheme.MaterialIconBtn" parent="AppTheme.MaterialBtn">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:minHeight">4dp</item>
        <item name="android:minWidth">4dp</item>
    </style>

</resources>
